// hero-banner__item
.hero-banner__item
  .container
    .hero-banner__wrapper
      .hero-banner__img
        ='\n'
        img.hero-banner__img__el(src="assets/img/dummy/"+data.img alt=data.title)/
      .hero-banner__txt
        .hero-banner__txt__wrapper
          h1.hero-banner__title
            | !{data.title}
          p.hero-banner__desc
            | !{data.desc}
          ='\n'
          .hero-banner__btn
            a.btn.btn--primary(href="#") Consult today
='\n'
